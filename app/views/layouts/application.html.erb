<!DOCTYPE html>
<html>
  <head>
    <title>Hadith</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">Hadith</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to "Browse books", books_path %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="container">
        <% flash.each do |key, value| %>
          <div class="alert">
            <%= value %>
          <% end %>
      </div>
    </div>

    <div id="wrap">
      <div class="container">
        <div class="row">
          <%= yield %>
        </div>
      </div>
      <div id="push"></div>
    </div>

    <div id="footer">
      <div class="container">
        <p class="muted credit">
        Copylefted to 
        <a href="#">TaegukWarriors</a>
        and 
        <a href="#">Ninjas</a>.
        </p>
      </div>
    </div>
  </body>
</html>
