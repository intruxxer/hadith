<%= form_for [@book, @chapter, @hadit], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :matan, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :matan, :class => 'span6' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                book_chapter_path(@book, @chapter), :class => 'btn' %>
  </div>
<% end %>
