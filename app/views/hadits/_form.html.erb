<%= form_for [@book, @chapter, @hadit], html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :section, class: 'control-label' %>
    <div class="controls">
      <%= f.select :section_id, @chapter.sections.collect{ |s| [ s.title, s.id ] }, include_black: 'None' %>
    </div><br/>
    <%= f.label :hadits_number, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :hdnum, class: 'text_field' %>
    </div><br/>
    <%= f.label :matan, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :matan, class: 'span6', cols: '10', rows: '10' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                book_chapter_path(@book, @chapter), class: 'btn' %>
  </div>
<% end %>
