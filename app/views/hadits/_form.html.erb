<%= form_for @hadit, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :matan, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :matan, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :book, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :book, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                hadits_path, :class => 'btn' %>
  </div>
<% end %>
