<%- model_class = Book -%>
<div class="page-header">
  <h1>Available Books</h1>
</div>

<p class="lead"> List of Available Hadith Books </p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Book Title</th>
      <th>Book Author</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td>
          <%= link_to raw('<i class="icon-pencil"></i>'),
          edit_book_path(book), :alt => "Edit this book" %>
          <%= link_to raw('<i class="icon-remove"></i>'), 
          book_path(book), confirm: 'Are you sure?', method: :delete, :alt => "Delete this book" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Book",
            new_book_path(@book),
            :class => 'btn btn-primary' %>
